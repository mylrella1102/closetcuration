<%= render "shared/sidebar" %>
<div class="bg-light border rounded p-4 mx-auto">
  <div class = "d-flex flex-column text-center">
    <div class = "post-img">
        <% if @account.image.present? %>
        <%= image_tag @account.image.variant(resize: '200x200'), class: "rounded-circle" %>
        <% else %>
        <%= image_tag "icon.png", variant: { resize: '200x200' }, class: "rounded-circle" %>
        <% end %>

    </div>
    <div class = "mt-3 mb-3 ">
      <%= @account.name %><br>
      <% if @account.date.present? %>
        <%= @account.date %>
      <% end %>
    </div>
    <div class="row d-flex justify-content-center">
      <div class="row col mt-3 d-flex justify-content-center">
        <%= link_to "編集", edit_account_path(@account.id), method: :get, class: "btn bg-primary-subtle border border-primary-subtle text-primary-emphasis rounded-pill col-4 me-1" %>
        <%= link_to "削除", account_path(@account.id), method: :delete, data: {confirm:"このアカウントを削除してよろしいですか？"}, class: "btn bg-danger-subtle border border-danger-subtle text-danger-emphasis rounded-pill col-4" %>
      </div>
    </div>
  </div>
</div>