<%= render "shared/sidebar" %>
<div class="bg-light border rounded p-4 mx-auto">
  <div class = "d-flex flex-column text-center">
    <div class = "post-img">
      <%= image_tag @item.image.variant(resize: '200x200') %> 
    </div>
    <div class = "mt-3 mb-3 ">
        名前：<%= @item.name %><br>
        カテゴリー：<%= link_to @item.category.name, items_path(category_id: @item.category_id), method: :get, class: "text-decoration-none" %><br>
        色：<%= link_to @item.color.name, items_path(color_id: @item.color_id), method: :get, class: "text-decoration-none" %><br>
        季節：<%= link_to @item.season.name, items_path(season_id: @item.season_id), method: :get, class: "text-decoration-none" %>
      <% if @item.info.present? %>
        <span>メモ：<%= @item.info %></span>
      <% end %>
    </div>
    <%# <div class='star-btn'>
      <%= image_tag "star.png", class:"star-icon me-2 " %>
      <%# <span class='star-count'>0</span><br>
    </div> %> 
    <div class="row d-flex justify-content-center">
      <div class="row col mt-3 d-flex justify-content-center">
        <%= link_to "編集", edit_item_path(@item.id), method: :get, class: "btn bg-primary-subtle border border-primary-subtle text-primary-emphasis rounded-pill col-4 me-1" %>
        <%= link_to "削除", item_path(@item.id), method: :delete, class: "btn bg-danger-subtle border border-danger-subtle text-danger-emphasis rounded-pill col-4" %>
      </div>
    </div>
  </div>
</div>